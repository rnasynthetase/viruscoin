#!/usr/bin/make -f
# -*- mode: makefile; coding: utf-8 -*-

#DEB_MAKE_CHECK_TARGET = test_viruscoin
#build/viruscoind::
#	$(if $(filter nocheck,$(DEB_BUILD_OPTIONS)),,src/test_viruscoin)

DEB_INSTALL_EXAMPLES_viruscoind += debian/examples/*
DEB_INSTALL_MANPAGES_viruscoind += debian/manpages/*

%:
	dh --with bash-completion $@

override_dh_auto_build:
	cd src; $(MAKE) -f makefile.unix viruscoind
	$(MAKE)

override_dh_auto_clean:
	if [ -f Makefile ]; then $(MAKE) clean; else rm -rf build/; rm -f viruscoin-qt; fi
	cd src; $(MAKE) -f makefile.unix clean

override_dh_auto_configure:
	qmake viruscoin-qt.pro USE_QRCODE=1

override_dh_auto_test:
	cd src; $(MAKE) -f makefile.unix test_viruscoin
	src/test_viruscoin

# Ensure wrapper is set executable
binary-post-install/viruscoind:
	chmod +x $(cdbs_curdestdir)usr/bin/viruscoind
binary-post-install/viruscoin-qt:
	chmod +x $(cdbs_curdestdir)usr/bin/viruscoin-qt
